{
    "buildCommand": "bun run build:vercel",
    "outputDirectory": ".next",
    "framework": "nextjs",
    "installCommand": "bun install",
    "devCommand": "bun run dev",
    "functions": {
        "src/app/api/**/*.ts": {
            "runtime": "edge"
        }
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/$1"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}